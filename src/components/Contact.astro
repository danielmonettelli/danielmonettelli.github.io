<section id="contact" class="relative py-24 lg:py-32">
  <div class="max-w-5xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16 reveal-up">
      <p class="mui-overline" data-i18n="contact.overline">Contact</p>
      <h2 class="mui-h2" data-i18n-html="contact.titleHtml">
                Shall we <span class="gradient-text">work together</span>?
      </h2>
      <p class="mt-4 max-w-2xl mx-auto text-sm sm:text-base" style="color: var(--mui-text-muted);" data-i18n="contact.description">
        I'm available for new projects, collaborations and
        opportunities in the .NET ecosystem and mobile development.
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 mb-16">
      <!-- Contact Info Cards -->
      <div class="space-y-4 reveal-left">
        {contactInfo.map((info) => (
          <div class="glass rounded-2xl p-6 flex items-center gap-5 transition-all duration-300 group">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center shrink-0 transition-colors" style="background: var(--mui-primary-bg);">
              {info.icon === "mail" ? (
                <svg class="w-5 h-5" style="color: var(--mui-primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              ) : (
                <svg class="w-5 h-5" style="color: var(--mui-primary);" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              )}
            </div>
            <div>
              <p class="text-xs uppercase tracking-wider mb-0.5" style="color: var(--mui-text-disabled);" data-i18n={`contact.${info.icon === 'mail' ? 'email' : 'locationLabel'}`}>{info.label}</p>
              {info.href ? (
                <a href={info.href} class="text-sm font-semibold transition-colors" style="color: var(--mui-text-primary);">
                  {info.value}
                </a>
              ) : (
                <p class="text-sm font-semibold" style="color: var(--mui-text-primary);" data-i18n="contact.locationValue">{info.value}</p>
              )}
            </div>
          </div>
        ))}

        <!-- Availability card -->
        <div class="glass rounded-2xl p-6 transition-all duration-300" style="border-color: var(--mui-border);">
          <div class="flex items-center gap-3 mb-3">
            <div class="w-3 h-3 rounded-full bg-emerald-400 animate-pulse" aria-hidden="true"></div>
            <span class="text-sm font-semibold text-emerald-400" data-i18n="contact.available">Available for projects</span>
          </div>
          <p class="text-xs leading-relaxed" style="color: var(--mui-text-muted);" data-i18n="contact.availableDesc">
            Open to new challenges in .NET development, cross-platform mobile apps,
            and backend architecture. Let's talk!
          </p>
        </div>
      </div>

      <!-- Social Links -->
      <div class="reveal-right">
        <div class="glass rounded-2xl p-8 h-full flex flex-col justify-center">
          <p class="text-xs uppercase tracking-widest mb-6" style="color: var(--mui-text-disabled);" data-i18n="contact.findMe">Find me on</p>

          <div class="grid grid-cols-2 gap-4" id="social-links">
            {socialLinks.map((social) => (
              <a
                href={social.url}
                target={social.url.startsWith("/") ? "_self" : "_blank"}
                rel={social.url.startsWith("/") ? "" : "noopener noreferrer"}
                class="social-link glass-subtle rounded-2xl p-5 flex flex-col items-center gap-3 transition-all duration-300 group"
                aria-label={social.url.startsWith("/") ? social.name : `${social.name} (opens in a new tab)`}
              >
                <div class="w-12 h-12 rounded-xl flex items-center justify-center transition-colors" style="background: var(--mui-bg-subtle);">
                  {social.icon === "github" && (
                    <svg class="w-6 h-6 transition-colors" style="color: var(--mui-text-muted);" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z" />
                    </svg>
                  )}
                  {social.icon === "twitter" && (
                    <svg class="w-6 h-6 transition-colors" style="color: var(--mui-text-muted);" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z" />
                    </svg>
                  )}
                  {social.icon === "linkedin" && (
                    <svg class="w-6 h-6 transition-colors" style="color: var(--mui-text-muted);" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z" />
                    </svg>
                  )}
                  {social.icon === "blog" && (
                    <svg class="w-6 h-6 transition-colors" style="color: var(--mui-text-muted);" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                  )}
                </div>
                <span class="text-xs font-semibold transition-colors" style="color: var(--mui-text-muted);">
                  {social.name}
                </span>
              </a>
            ))}
          </div>

          <!-- CTA -->
          <div class="mt-8 text-center">
            <a
              href="mailto:danielmonetelli@hotmail.com"
              class="magnetic-btn mui-btn-contained mui-btn-lg"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span data-i18n="contact.sendEmail">Send me an email</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  import anime from "animejs";

  // Social link hover and focus animations
  document.querySelectorAll<HTMLElement>(".social-link").forEach((link) => {
    function animateIn() {
      anime({
        targets: link,
        scale: 1.05,
        duration: 300,
        easing: "easeOutQuad",
      });

      const icon = link.querySelector("svg");
      if (icon) {
        anime({
          targets: icon,
          rotate: [0, -10, 10, -5, 0],
          duration: 600,
          easing: "easeOutElastic(1, 0.5)",
        });
      }
    }

    function animateOut() {
      anime({
        targets: link,
        scale: 1,
        duration: 400,
        easing: "easeOutElastic(1, 0.5)",
      });
    }

    link.addEventListener("mouseenter", animateIn);
    link.addEventListener("mouseleave", animateOut);
    link.addEventListener("focus", animateIn);
    link.addEventListener("blur", animateOut);
  });
</script>
