---
/**
 * Footer Component — MUI brandingTheme.ts
 * Clean, minimal footer with copyright, back-to-top, and divider border.
 */
const currentYear = new Date().getFullYear();
---

<footer class="relative py-10" style="border-top: 1px solid var(--mui-border);">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 md:grid-cols-3 items-center gap-6">
      <!-- Left: Brand -->
      <div class="flex items-center gap-3 justify-center md:justify-start">
        <img
          src="https://raw.githubusercontent.com/danielmonettelli/danielmonettelli.github.io/refs/heads/main/blog/assets/images/Daniel_Monettelli.png"
          alt=""
          class="w-8 h-8 rounded-lg object-cover"
          loading="lazy"
          aria-hidden="true"
        />
        <div>
          <p class="text-[0.875rem] font-semibold" style="color: var(--mui-text-secondary);">Daniel Monettelli</p>
          <p class="text-[0.625rem]" style="color: var(--mui-text-disabled);" data-i18n="footer.tagline">
            Full Stack Developer | .NET & Mobile Specialist
          </p>
        </div>
      </div>

      <!-- Center: Copyright -->
      <p class="text-[0.75rem] text-center mx-auto" style="color: var(--mui-text-disabled);">
        © {currentYear} Daniel Monettelli. <span data-i18n="footer.copyright">All rights reserved.</span>
      </p>

      <!-- Right: Links -->
      <div class="flex items-center gap-4 justify-center md:justify-end">
        <a
          href="https://github.com/danielmonettelli"
          target="_blank"
          rel="noopener noreferrer"
          class="text-[0.75rem] transition-colors"
          style="color: var(--mui-text-disabled);"
          aria-label="GitHub"
        >
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z" />
          </svg>
        </a>
        <a
          href="/blog/"
          class="text-[0.75rem] transition-colors"
          style="color: var(--mui-text-disabled);"
        >
          Blog
        </a>
      </div>
    </div>
  </div>
</footer>
